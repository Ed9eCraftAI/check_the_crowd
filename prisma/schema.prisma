generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
  output     = "../api/node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum Chain {
  eth
  bsc
}

enum VoteChoice {
  valid
  risky
  unknown
}

model Token {
  id        String   @id @default(cuid())
  chain     Chain
  address   String
  createdAt DateTime @default(now())

  votes Vote[]

  @@unique([chain, address])
}

model Vote {
  id          String     @id @default(cuid())
  tokenId     String
  token       Token      @relation(fields: [tokenId], references: [id])
  voterWallet String
  choice      VoteChoice
  signature   String
  message     String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([tokenId, voterWallet])
}

model Nonce {
  id        String    @id @default(cuid())
  wallet    String
  nonce     String
  issuedAt  DateTime
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@unique([wallet, nonce])
}
